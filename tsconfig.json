{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types"],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",  // Added baseUrl for absolute imports
    "paths": {
      "@/*": ["./*"],  // Adjusted to reflect correct absolute path mapping
      "@types/*": ["./types/*"]  // Added path for @types alias
    }
  },
  "include": [
    "svgr.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/(dashboard)/store-manager-admin/dashboard/plate-number-request",
    "src/app/(dashboard)/store-manager-admin/dashboard/assign-plate-number"
  ],
  "exclude": ["node_modules"]
}
